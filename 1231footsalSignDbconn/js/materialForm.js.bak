var label;
var target;
var checkMark = "fa-check"; //set the font-awesome icon class
var iconSize = 'fa-2x'; //set iconSize

function Form(){

}

Form.prototype.alterForm= function(){
    
    $('#formOutterWrapper input').focus(function(e){
        form.setLabel(e.target);
        form.checkFocused();
    });
    $('#formOutterWrapper input').focusout(function(e){
        form.setLabel(e.target);
        form.checkUnfocused(e.target);
    });
};

Form.prototype.setLabel = function(target){
    label= $('#formOutterWrapper label[for='+target.id+']');
};

Form.prototype.getLabel = function(){
    return label;
};

Form.prototype.checkFocused= function(){
    form.getLabel().addClass('#formOutterWrapper active','');
};

Form.prototype.checkUnfocused= function(target){
    if($(target).val().length == 0){

        form.getLabel().removeClass('#formOutterWrapper active');

        if(form.addCheckMark(target)){

            form.getLabel().next().remove();
        }
    }else if(!$(form.getLabel()).next().is($(checkMark))){
        form.getLabel().after("#formOutterWrapper <span class='fa "+iconSize+" "+checkMark+"'></span>")
    }
};

Form.prototype.addCheckMark = function(){
    if(form.getLabel().next().is($("#formOutterWrapper ."+ checkMark +""))){
        return true;
    }else{
        return false;
    }
};



form = new Form();

function initialize(){
    form.alterForm();
}
initialize();